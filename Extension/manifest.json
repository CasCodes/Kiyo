
{
    "name": "Kiyo",
    "version": "0.5",
    "description": "alpha",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["script/content.js"]
        }
    ],
    "permissions": [
        "tabs"
    ],

    "background": {
        "service_worker": "script/background.js"
    },

    "action": {
        "default_popup": "widget.html",
        "default_icon": "res/icon.png"
    },
    
    "icons": {
        "16": "res/icon.png",
        "32": "res/icon.png",
        "48": "res/icon.png",
        "128": "res/icon.png"
    }
}
